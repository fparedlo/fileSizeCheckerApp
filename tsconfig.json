{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": "./src", // Set the base URL to your source directory
    "paths": {
      "@/*": ["*"] // This maps '@/' to the root of the src directory
    },
  }
}